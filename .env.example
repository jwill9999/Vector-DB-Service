# Service network configuration
HOST=0.0.0.0
PORT=8080
NODE_ENV=development

# Google Drive / Docs credentials
GOOGLE_DRIVE_WATCH_FOLDER_ID=your_drive_folder_id
GOOGLE_DRIVE_WEBHOOK_SECRET=set_a_shared_token
GOOGLE_SERVICE_ACCOUNT_EMAIL=service-account@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_KEY=base64_or_json_key_payload
# Optional: when using Google Pub/Sub push notifications
GOOGLE_PUBSUB_TOPIC=projects/your-project/topics/drive-ingest

# Supabase vector store configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_DIRECT_URL=
service_role_key
SUPABASE_ANON_KEY=
SUPABASE_SCHEMA=public
SUPABASE_DOCUMENT_TABLE=documents
SUPABASE_CHUNK_TABLE=document_chunks
SUPABASE_MATCH_FUNCTION=match_document_chunks
SUPABASE_EMBEDDING_DIMENSIONS=1536

# Embedding provider
EMBEDDING_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Ingestion pipeline
INGESTION_QUEUE_NAME=google-docs-ingest

# Optional test-only environment for integration tests
SUPABASE_TEST_URL=
SUPABASE_TEST_SERVICE_ROLE_KEY=
SUPABASE_TEST_SCHEMA=public
SUPABASE_TEST_DOCUMENT_TABLE=documents
SUPABASE_TEST_CHUNK_TABLE=document_chunks
SUPABASE_TEST_MATCH_FUNCTION=match_document_chunks
SUPABASE_TEST_EMBEDDING_DIMENSIONS=1536
